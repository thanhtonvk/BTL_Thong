@model IEnumerable<CuaHangPhuKienDienThoai.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.TenSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HinhAnh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoTa)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                <img src="@item.HinhAnh" height="300" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaBan)đ
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new {@class = "btn btn-primary"}) 
                <a href="@Url.Action("Index", "ChiTietSanPhams", new {id = item.ID})" class="btn btn-success">Chi tiết sản phẩm</a>
                @Html.ActionLink("Delete", "Delete", new { id = item.ID },new {@class = "btn btn-danger"})
            </td>
        </tr>
    }

</table>